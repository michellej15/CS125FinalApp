<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|fill_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".DogOrCat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog or Cat" />

    <EditText
        android:id="@+id/getScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textImeMultiLine|number"
        android:text="Score:" />

    <ImageButton
        android:id="@+id/dogCatImage"
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/getDog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dog" />

    <Button
        android:id="@+id/getCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cat" />

</LinearLayout>